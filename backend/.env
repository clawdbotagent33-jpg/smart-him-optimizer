# Smart HIM Optimizer - 환경 변수 설정
# 이 파일을 .env로 복사하고 값을 설정하세요

# 데이터베이스 설정
DATABASE_URL=postgresql+asyncpg://him_admin:him_pass@localhost:5432/smart_him_db
POSTGRES_PASSWORD=him_pass

# 보안 설정
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# 비식별화 설정
ANONYMIZATION_KEY=IbOc44g3t7oS4TuyZ1pJ04DEduDm9ZLp_G1TPRm8AFo=
ENABLE_ANONYMIZATION=true

# RAG 설정
CHROMA_DB_PATH=./data/chroma
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RESULTS=5

# LLM 설정
OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL=qwen2.5:7b
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2048

# ML 모델 설정
ML_MODEL_PATH=./ml/models
A_GROUP_THRESHOLD=0.6
DENIAL_THRESHOLD=0.5

# 파일 업로드 설정
MAX_UPLOAD_SIZE=104857600
UPLOAD_DIR=./data/uploads

# K-DRG 설정
KDRG_VERSION=v4.7
KCD_VERSION=KCD-9

# 환경 설정
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
